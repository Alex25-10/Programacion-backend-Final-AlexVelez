<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>Cat√°logo de Productos</title>
  <link rel="stylesheet" href="../public/css/product.css" />
</head>
<body>
  <h1>Cat√°logo de Productos</h1>

  <form method="GET" action="/products">
    <input type="text" name="query" placeholder="Buscar por categor√≠a" value="{{filters.query}}" />
    <select name="availability">
      <option value="">Disponibilidad</option>
      <option value="true" {{#if (eq filters.availability "true")}}selected{{/if}}>Disponible</option>
      <option value="false" {{#if (eq filters.availability "false")}}selected{{/if}}>No disponible</option>
    </select>
    <select name="sort">
      <option value="">Ordenar por</option>
      <option value="asc" {{#if (eq filters.sort "asc")}}selected{{/if}}>Menor precio</option>
      <option value="desc" {{#if (eq filters.sort "desc")}}selected{{/if}}>Mayor precio</option>
    </select>
    <button type="submit">Filtrar</button>
  </form>

  <div class="product-grid">
    {{#each products}}
      <div class="product-card">
        <h3>{{this.title}}</h3>
        <img src="{{this.thumbnails.[0]}}" alt="{{this.title}}" width="150" />
        <p>Precio: ${{this.price}}</p>
        <p>Stock: {{this.stock}}</p>
        <a href="/products/{{this._id}}">Ver detalles</a>
        <button onclick="agregarAlCarrito('{{this._id}}')">üõí Agregar al carrito</button>
      </div>
    {{/each}}
  </div>

  <nav>
    {{#if pagination.hasPrevPage}}
      <a href="{{pagination.prevLink}}">‚¨ÖÔ∏è Anterior</a>
    {{/if}}

    P√°gina {{pagination.page}} de {{pagination.totalPages}}

    {{#if pagination.hasNextPage}}
      <a href="{{pagination.nextLink}}">Siguiente ‚û°Ô∏è</a>
    {{/if}}
  </nav>

  <script>
    async function agregarAlCarrito(pid) {
      let cid = localStorage.getItem("cid");
      if (!cid) {
        const res = await fetch("/api/carts", { method: "POST" });
        const data = await res.json();
        cid = data.cart._id;
        localStorage.setItem("cid", cid);
      }

      try {
        const res = await fetch(`/api/carts/${cid}/products/${pid}`, { method: "POST" });
        const result = await res.json();
        if (result.status === "success") {
          alert("Producto agregado al carrito üéâ");
        } else {
          alert("Error: " + result.message);
        }
      } catch (err) {
        alert("Error al agregar al carrito");
      }
    }
  </script>
</body>
</html>
