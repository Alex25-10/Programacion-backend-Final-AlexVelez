<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>{{product.title}}</title>
  <link rel="stylesheet" href="/css/product.css" />
</head>
<body>
  <main>
    <h1>{{product.title}}</h1>

    {{#if product.thumbnail.length}}
      <img src="{{product.thumbnail.[0]}}" alt="{{product.title}}" width="200" />
    {{else}}
      <p><em>Sin imagen disponible</em></p>
    {{/if}}

    <p><strong>DescripciÃ³n:</strong> {{product.description}}</p>
    <p><strong>Precio:</strong> ${{product.price}}</p>
    <p><strong>Stock:</strong> {{product.stock}}</p>
    <p><strong>CategorÃ­a:</strong> {{product.category}}</p>

    <button onclick="agregarAlCarrito('{{product._id}}')">ðŸ›’ Agregar al carrito</button>
    <br /><br />
    <a href="/products">â¬… Volver al catÃ¡logo</a>
  </main>

  <script>
    async function agregarAlCarrito(pid) {
      let cid = localStorage.getItem("cid");
      if (!cid) {
        try {
          const res = await fetch("/api/carts", { method: "POST" });
          const data = await res.json();
          cid = data.payload._id; // ðŸ”„ clave corregida

          localStorage.setItem("cid", cid);
        } catch (error) {
          alert("No se pudo crear un carrito");
          return;
        }
      }

      try {
        const res = await fetch(`/api/carts/${cid}/products/${pid}`, {
          method: "POST",
          headers: {
            "Content-Type": "application/json"
          },
          body: JSON.stringify({ quantity: 1 }) 
        });

        const result = await res.json();
        if (result.status === "success") {
          alert("Producto agregado al carrito ðŸŽ‰");
        } else {
          alert("Error: " + (result.message || "No se pudo agregar"));
        }
      } catch (err) {
        console.error("Error:", err);
        alert("Error al agregar al carrito");
      }
    }
  </script>
</body>
</html>
