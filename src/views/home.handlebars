<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Productos</title>
  <link rel="stylesheet" href="/css/home.css">
</head>
<body>
  <header>
    <h1>üõçÔ∏è Lista de Productos</h1>
    <div style="text-align: right;">
      {{#if userCartId}}
        <a href="/cart/{{userCartId}}" class="go-cart-btn">üõí Ver Carrito</a>
      {{else}}
        <span class="go-cart-btn disabled" style="opacity: 0.6; cursor: not-allowed;">üõí Sin carrito</span>
      {{/if}}
    </div>
  </header>

  <form method="GET" action="/products">
    <label for="query">Buscar:</label>
    <input type="text" name="query" id="query" value="{{filters.query}}" placeholder="Nombre o categor√≠a">

    <label for="availability">Disponibilidad:</label>
    <select name="availability" id="availability">
      <option value="all" {{#if (eq filters.availability "all")}}selected{{/if}}>Todas</option>
      <option value="available" {{#if (eq filters.availability "available")}}selected{{/if}}>Solo disponibles</option>
      <option value="unavailable" {{#if (eq filters.availability "unavailable")}}selected{{/if}}>No disponibles</option>
    </select>

    <label for="sort">Ordenar por precio:</label>
    <select name="sort" id="sort">
      <option value="">Ninguno</option>
      <option value="asc" {{#if (eq filters.sort "asc")}}selected{{/if}}>Ascendente</option>
      <option value="desc" {{#if (eq filters.sort "desc")}}selected{{/if}}>Descendente</option>
    </select>

    <button type="submit">Aplicar</button>

    {{#if hasFilters}}
      <a href="/products" style="margin-left: 10px;">Limpiar filtros</a>
    {{/if}}
  </form>

  <hr>

  {{#if products.length}}
    <p>Total de productos: {{pagination.totalDocs}}</p>

    <ul class="product-list">
      {{#each products}}
        <li class="product-card">
          <h3>{{title}}</h3>
          <p><strong>Precio:</strong> ${{price}}</p>
          <p><strong>Stock:</strong> {{stock}}</p>
          <p><strong>Categor√≠a:</strong> {{category}}</p>
          <a href="/products/{{this._id}}">Ver detalle</a>

          {{#if ../userCartId}}
            <button onclick="agregarAlCarrito('{{../userCartId}}', '{{_id}}')">Agregar al carrito</button>
          {{else}}
            <button disabled title="No hay carrito activo">Agregar al carrito</button>
          {{/if}}
        </li>
        <hr>
      {{/each}}
    </ul>
  {{else}}
    <div class="empty-result">
      <h4>No se encontraron productos con esos filtros.</h4>
      <a href="/products" class="go-back-btn">Volver al cat√°logo completo</a>
    </div>
  {{/if}}

  <div class="pagination">
    {{#if pagination.hasPrevPage}}
      <a href="{{pagination.prevLink}}">‚¨Ö P√°gina anterior</a>
    {{/if}}

    <span>P√°gina {{pagination.page}} de {{pagination.totalPages}}</span>

    {{#if pagination.hasNextPage}}
      <a href="{{pagination.nextLink}}">P√°gina siguiente ‚û°</a>
    {{/if}}
  </div>

  <script>
    async function agregarAlCarrito(cartId, productId) {
      try {
        const response = await fetch(`/api/carts/${cartId}/products/${productId}`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ quantity: 1 })
        });

        const data = await response.json();

        if (data.status === 'success') {
          alert('‚úÖ Producto agregado al carrito');
        } else {
          alert('‚ùå Error al agregar al carrito');
        }
      } catch (err) {
        console.error('Error:', err);
        alert('‚ùå Error inesperado al agregar al carrito');
      }
    }
  </script>
</body>
</html>
